<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .lb {
            font-weight: bold;
        }

        .lb1 {
            color: #005999;
        }

        .t {
            font-family: 'DejaVu Sans', Arial, Helvetica, sans-serif;
        }</ui:style>
    <g:HTMLPanel>
        <g:HorizontalPanel spacing="5" styleName="{style.t}">
            <g:cell width="100">
                <g:Label styleName="{style.lb}" ui:field="lbChannel"></g:Label>
            </g:cell>
            <g:cell width="150">
                <g:Label styleName="{style.lb1}" ui:field="lbTYPE"></g:Label>
            </g:cell>
            <g:HTML ui:field="data"></g:HTML>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>